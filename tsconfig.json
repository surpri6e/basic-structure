{
    "include": ["build.config.ts", "src", "__tests__"],
    "exclude": ["./example/", "./node_modules/"],
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2022",
        "module": "ES2020",
        "moduleResolution": "bundler",
        "strict": true,
        "skipLibCheck": true,
        "declaration": false,
        "sourceMap": false,
        "noUnusedLocals": true,
        "esModuleInterop": true
    }
}
